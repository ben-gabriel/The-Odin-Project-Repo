    <%- include('./partials/header.ejs') %>

    <form class='newPostForm' action="/" method="post">
        <label for="postTitle"> Title </label>
        <input class='txtInput' type="text" id="fTitle" name="postTitle">
        
        <label for="postAuthor"> Author </label>
        <input class='txtInput' type="text" id="fAuthor" name="postAuthor">
        
        <label for="postContent"> Content</label>
        <input class='txtInput' type="text" id="fContent" name="postContent">

        <label for="postImg"> Image Link</label>
        <input class='txtInput' type="text" id="fImg" name="postImg">

        <input class='btn' type="submit" value="Submit">
    </form>

    <% if (postData.length>0) { %>
        <% postData.forEach(post => { %>
            <br>
            
            <div class="postPreview">

                <section class="previewHeader">
                    <h1 class="title"><%= post.postTitle || 'Post Title' %></h1>
                    
                    <section class="authorBanner">
                        <a href="" class="userTag"><%= post.postAuthor || 'postAuthor' %></a> 
                        <p><%= post.postDate || 'Not Declared' %></p>
                    </section>
                </section>

                <section class="previewContent">
                    <img src=<%= post.postImg || 'https://i.5' %> alt="" srcset="">
                    <p><%= post.postContent || '' %>
                    </p>
                </section>

                <section class="previewFooter">
                    <button class="btn">Share</button>
                    <form action="/" method="post">
                        <input type="hidden" name="_id" value=<%= post._id %> />
                        <input type="submit" value="Delete" class="btn">
                    </form>
                </section>

            </div>
        <% }) %>
    <% } %>

