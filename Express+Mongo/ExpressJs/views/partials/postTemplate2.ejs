<% if (postData.length>0) { %>
    <% postData.forEach(post => { %>
        <br>
        
        <div class="postPreview">

            <section class="previewHeader">
                <h1 class="title"><%= post.postTitle || 'Post Title' %></h1>
                
                <section class="authorBanner">
                    <a href='' class="userTag"><%= post.postAuthor || 'postAuthor' %></a> 
                    <a href=<%= '/posts/'+ post._id %> > <%= post.postDate || 'Not Declared' %></a>
                </section>
            </section>

            <section class="previewContent">
                <img src=<%= post.postImg || 'https://i.5' %> alt="" srcset="">
                <p><%= post.postContent || '' %>
                </p>
            </section>

            <section class="previewFooter">
                <button class="btn">Share</button>
                <form action="/posts/Delete" method="post">
                    <input type="hidden" name="_id" value=<%= post._id %> />
                    <input type="submit" value="Delete" class="btn">
                </form>
            </section>
            

            <section class="commentSection">
                
                <form action="/posts/newComment" method="post" >
                    <textarea name="" id="" cols="" rows="" placeholder="Leave a comment" wrap="hard" class="commentInput"></textarea>
                    
                    <input type="hidden" name="_id" value=<%= post._id %> />
                    <input type="submit" value="Comment" class="btn">
                </form>  

                <% post.postArray.forEach(comment=>{ %>
                        <div class="postComments">
                        
                            <a href=""> <%= comment._id %> </a> <a href=""></a>

                            <p> <%= comment.comment %> </p>
                        </div>
                <% }) %>

            </section>

        </div>
    <% }) %>
<% } %>